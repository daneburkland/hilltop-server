{
  "name": "graphql-auth",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "generate": "npm -s run generate:prisma",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "postinstall": "npm -s run generate",
    "set-db-url": "DATABASE_URL=$(heroku config:get DATABASE_URL -a proton-postgres)",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly src/server",
    "testLauncher": "ts-node-dev --no-notify --respawn --transpileOnly src/workers/testLauncher",
    "testRunner": "ts-node-dev --no-notify --respawn --transpileOnly src/workers/tasks/runTest | ts-node-dev src/workers/logger"
  },
  "dependencies": {
    "@nexus/schema": "0.14.0",
    "@types/dockerode": "^2.5.34",
    "@types/pg": "^7.14.4",
    "@types/puppeteer": "^3.0.1",
    "@xstate/test": "^0.4.0",
    "bcryptjs": "2.4.3",
    "bull": "^3.15.0",
    "dockerode": "^3.2.0",
    "dotenv": "^8.2.0",
    "graphql": "14.6.0",
    "graphql-shield": "5.7.3",
    "graphql-yoga": "1.18.3",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.8.1",
    "nexus-plugin-prisma": "^0.16.1",
    "pg": "^8.3.0",
    "pino": "^6.3.2",
    "puppeteer": "^5.0.0",
    "split2": "^3.1.1",
    "vm2": "^3.9.2",
    "xstate": "^4.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/bull": "^3.14.0",
    "@types/jsonwebtoken": "8.5.0",
    "@types/node": "12.12.47",
    "@types/ws": "7.2.5",
    "ts-node": "8.10.2",
    "ts-node-dev": "1.0.0-pre.49",
    "typescript": "3.9.5"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
