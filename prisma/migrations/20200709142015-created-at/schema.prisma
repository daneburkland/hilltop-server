generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model TestRun {
  id        Int      @default(autoincrement()) @id
  test      Test     @relation(fields: [testId], references: [id])
  testId    Int
  result    String
  createdAt DateTime @default(now())
}

model Test {
  id        Int       @default(autoincrement()) @id
  title     String
  author    User?     @relation(fields: [authorId], references: [id])
  authorId  String?
  code      String
  runs      TestRun[]
  createdAt DateTime  @default(now())
}

model User {
  id    String  @id
  email String  @unique
  name  String?
  tests Test[]
}
