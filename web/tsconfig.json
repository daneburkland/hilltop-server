{
  "compilerOptions": {
    "plugins": [{ "name": "nexus/typescript-language-service" }],
    "outDir": "dist",
    // https://github.com/graphql-nexus/nexus-plugin-prisma/issues/82
    "skipLibCheck": true,
    "rootDir": "src",
    "lib": ["esnext", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["src/**/*", "src", "types.d.ts"]
}
